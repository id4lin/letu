<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/root"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"

    android:background="@color/gray_bg"
    android:orientation="vertical">


    <ImageView
        android:id="@+id/tv_photo"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/text_size_i"
        android:src="@drawable/user_default_photo" />

    <LinearLayout
        android:id="@+id/userinfo_linearLayout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textAppearance="@style/SettingTitleTextView"
            android:visibility="invisible" />

        <TextView

            android:id="@+id/me_edit_des_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="8dp"
            android:text="点击登录"
            android:textAppearance="@style/SubtitleTextView"
            android:textColor="@color/more" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/gray_bg"
        android:orientation="vertical">

        <com.letu.app.game.strategy.ui.common.view.OneLineView
            android:id="@+id/my_game"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <com.letu.app.game.strategy.ui.common.view.OneLineView
            android:id="@+id/my_strategy"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <com.letu.app.game.strategy.ui.common.view.OneLineView
            android:id="@+id/my_promoter"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone" />

        <com.letu.app.game.strategy.ui.common.view.OneLineView
            android:id="@+id/my_welfare"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone" />

        <View
            android:layout_width="match_parent"
            android:layout_height="15dp"
            android:background="@color/transparent" />

        <com.letu.app.game.strategy.ui.common.view.OneLineView
            android:id="@+id/my_modify_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <com.letu.app.game.strategy.ui.common.view.OneLineView
            android:id="@+id/my_help"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <com.letu.app.game.strategy.ui.common.view.OneLineView
            android:id="@+id/my_back_feed"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone" />

        <com.letu.app.game.strategy.ui.common.view.OneLineView
            android:id="@+id/my_about_me"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <!--<View-->
        <!--android:layout_width="match_parent"-->
        <!--android:background="@color/divider"-->
        <!--android:layout_height="15dp" />-->
        <LinearLayout
            android:id="@+id/logout_linearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="20dp"
                android:background="@color/divider_me" />

            <TextView
                android:id="@+id/logout"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:background="@color/white"
                android:gravity="center"
                android:paddingBottom="5dp"
                android:paddingTop="5dp"
                android:text="退出登录"
                android:textColor="@color/orange"
                android:textSize="@dimen/text_size_d"
                android:visibility="visible" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/divider_me" />
        </LinearLayout>

        <!--<com.letu.app.game.strategy.ui.common.view.OneLineView-->
        <!--android:id="@+id/logout"-->
        <!--android:gravity="center"-->
        <!--android:textColor="@color/orange"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="wrap_content"/>-->

    </LinearLayout>
</LinearLayout>