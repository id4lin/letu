<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="5dp"
        card_view:cardCornerRadius="0dp"
        card_view:cardElevation="0dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="10dp">

            <ImageView
                android:id="@+id/game_icon"
                android:layout_width="120dp"
                android:layout_height="80dp"
                android:layout_alignParentRight="true"
                android:visibility="gone" />

            <TextView
                android:id="@+id/title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_toLeftOf="@id/game_icon"
                android:ellipsize="end"
                android:gravity="left|top"
                android:maxLines="2"
                android:text="xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx"
                android:textColor="@color/tu_text_color_title1"
                android:textSize="@dimen/tu_text_size_title1" />

            <TextView
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:id="@+id/content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/title"
                android:layout_toLeftOf="@id/game_icon"
                android:ellipsize="end"
                android:gravity="left|top"
                android:maxLines="3"
                android:text="杰拉德设计了飞机暗室逢灯就拉上机房了打算减肥了上岛咖啡"
                android:textColor="@color/tu_text_color_title2"
                android:textSize="@dimen/tu_text_size_title2" />

            <com.letu.app.game.strategy.ui.common.view.TextViewDrawable
                android:id="@+id/create_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_below="@id/content"
                android:layout_marginLeft="10dp"
                android:drawableLeft="@drawable/picture_with_text"
                android:drawablePadding="3dp"
                android:gravity="right|center_vertical"
                android:maxLines="1"
                android:text="2018-07-10 11:39"
                android:textColor="@color/tu_text_color_title3"
                android:textSize="@dimen/tu_text_size_title3"
                card_view:drawableLeftHeight="15dp"
                card_view:drawableLeftWidth="15dp" />

            <com.letu.app.game.strategy.ui.common.view.TextViewDrawable
                android:id="@+id/read_times"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_below="@id/content"
                android:layout_toLeftOf="@id/create_time"
                android:drawableLeft="@drawable/picture_with_text"
                android:drawablePadding="3dp"
                android:gravity="right|center_vertical"
                android:maxLines="1"
                android:text="1000"
                android:textColor="@color/tu_text_color_title3"
                android:textSize="@dimen/tu_text_size_title3"
                android:visibility="visible"
                card_view:drawableLeftHeight="15dp"
                card_view:drawableLeftWidth="15dp" />


            <com.letu.app.game.strategy.ui.common.view.TextViewDrawable
                android:id="@+id/create_user"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_below="@id/content"
                android:drawableLeft="@drawable/picture_with_text"
                android:drawablePadding="3dp"
                android:gravity="left|center_vertical"
                android:maxLines="1"
                android:text="发布者"
                android:textColor="@color/tu_text_color_title3"
                android:textSize="@dimen/tu_text_size_title3"
                card_view:drawableLeftHeight="15dp"
                card_view:drawableLeftWidth="15dp" />

        </RelativeLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>